# Core GCP settings
# GCP project IDs are not secrets, but use your own project in each environment.
GCP_PROJECT_ID="your-gcp-project-id"
BQ_PROJECT="your-gcp-project-id"
BQ_DATASET="sensors"
BQ_LOCATION="US"
GCS_BUCKET="your-gcs-bucket-name"
GCS_PREFIX="sensor_readings"

# Weather Underground + TSI API credentials
WU_API_KEY="your-weather-underground-api-key"
TSI_CLIENT_ID="your-tsi-client-id"
TSI_CLIENT_SECRET="your-tsi-client-secret"
TSI_AUTH_URL="https://api-prd.tsilink.com/oauth/token"

# Optional runtime toggles
LOG_LEVEL="INFO"
DISABLE_DB_SINK="1"
DISABLE_BQ_STAGING="0"

# Optional metadata tracking
BQ_RUN_METADATA="1"
BQ_RUN_METADATA_TABLE="ingestion_runs"

# Optional SharePoint sync
# SHAREPOINT_PAT="your-pat"
# SHAREPOINT_SITE_ID="your-site-id"
# SHAREPOINT_DRIVE_ID="your-drive-id"
